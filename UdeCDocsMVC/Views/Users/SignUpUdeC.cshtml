@model UdeCDocsMVC.Models.User

@{
    ViewData["Title"] = "SignUpUdeC";
    Layout = "_Layout_Minimal";
}

<h4>SignUp</h4>
<hr />
<div class="row">
    <div>
        <a asp-action="SignUpUdeC">Registro UdeC</a>
    </div>
    <div class="col-md-4">
        <form asp-action="SignUpUdeC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Institution" class="control-label"></label>
                <input asp-for="Institution" class="form-control" />
                <span asp-validation-for="Institution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idfaculty" class="control-label"></label>
                <select asp-for="Idfaculty" class="form-control" asp-items="ViewBag.Idfaculty"></select>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <p>@ViewBag.Message</p>
    </div>
    <div>
        <a asp-action="Login">Iniciar sesión</a>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al Inicio</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
